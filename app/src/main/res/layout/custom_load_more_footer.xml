<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlLoadMoreFooter"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <ProgressBar
        android:id="@+id/load_more_progressBar"
        android:layout_width="@dimen/progressbar.width"
        android:layout_height="@dimen/progressbar.height"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/custom_load_more_footer"
        android:padding="@dimen/progressbar.padding"
        android:visibility="gone" />

</RelativeLayout>
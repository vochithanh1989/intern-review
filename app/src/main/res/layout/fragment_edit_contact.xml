<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    <RelativeLayout
        android:id="@+id/llHearderEdit"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/backgroup.header.layout.main">

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/header_layout_main"
            android:textColor="#ffffff"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_marginLeft_btnBack"
            android:src="@drawable/ic_back" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlInfo"
        android:layout_below="@+id/llHearderEdit"
        android:layout_width="match_parent"
        android:layout_height="127dp" >

        <intership.dev.contact.Utility.CircleImageView
            android:id="@+id/imgAvatarEdit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_avarta2"
            />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgAvatarEdit"
            android:paddingLeft="40dp"
            android:text="Luke Skywalker Bell"
            android:textColor="#505050"
            android:textSize="25sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view.height"
        android:layout_below="@+id/rlInfo"
        android:background="#d8d8d8" />

    <RelativeLayout
        android:id="@+id/rlEditName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view1"
        android:background="@drawable/textview_background" >

        <EditText
            android:id="@+id/edtNameEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/textview_background"
            android:layout_marginLeft="15dp"
            android:text="Luke Skywalker Bell"
            android:textColor="@color/textview.color.text_edit"
            android:textSize="@dimen/textview.size.edit_name" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlEditDescription"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/rlEditName"
        android:layout_marginTop="50dp"
        android:background="@drawable/textview_background" >

        <EditText
            android:id="@+id/edtDescriptionEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:text="Luke Skywalker Bell is an award-winning
actress who has earned solid reputation
in stage productions and in many
supporting roles on screen."
            android:background="@drawable/textview_background"
            android:textColor="@color/textview.color.text_edit" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnControl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtButonOK"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/button.text.Save"
            android:textColor="@color/textview.dialog.button_color"
            android:textSize="17sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#b0b0b5" />

        <TextView
            android:id="@+id/txtButonCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/textview.dialog.button_cancel"
            android:textColor="@color/textview.dialog.button_color"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/lnControl"
        android:background="#b0b0b5" />

</RelativeLayout>
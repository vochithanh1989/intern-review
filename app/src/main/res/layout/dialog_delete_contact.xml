<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/dialog.marginleft"
    android:layout_marginRight="@dimen/dialog.maginright"
    android:background="@drawable/bg_dialog_delete_contact"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/textview.paddingbottom.dialog"
        android:paddingTop="@dimen/textview.paddingtop.dialog">

        <TextView
            android:id="@+id/tvMessageDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/textview.message.padding_right_left.dialog"
            android:paddingRight="@dimen/textview.message.padding_right_left.dialog"
            android:textColor="@color/textview.color.text_edit"
            android:textSize="@dimen/textsize.message.dialog" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view.height"
        android:background="@color/view.background"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button.height.dialog"
        android:layout_weight="2"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvOkDialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/button.text.ok"
                android:textAllCaps="false"
                android:textColor="@color/button.backgroup.item.list" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/view.height"
            android:layout_height="wrap_content"
            android:background="@color/view.background"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvCancelDialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/button.text.cancel"
                android:textAllCaps="false"
                android:textColor="@color/button.backgroup.item.list" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>